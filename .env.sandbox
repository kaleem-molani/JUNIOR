# Sandbox Environment Configuration
# Separate database and settings for testing scalability

# Database - Sandbox with Enhanced Connection Pooling
DATABASE_URL="postgresql://postgres:root@localhost:5433/trading_app_sandbox?schema=public&connection_limit=20&pool_timeout=30&connection_timeout=10&connect_timeout=5"

# NextAuth (for sandbox testing)
NEXTAUTH_SECRET="sandbox-secret-key-for-testing-12345"
NEXTAUTH_URL="http://localhost:4000"

# Application Mode
NODE_ENV="development"
APP_ENV="sandbox"

# Sandbox-specific settings
SANDBOX_MODE="true"
MOCK_BROKER_API="true"
SKIP_REAL_TRADING="true"

# Performance Monitoring
ENABLE_PERFORMANCE_LOGGING="true"
LOG_LEVEL="debug"

# Test Data Settings
GENERATE_TEST_ACCOUNTS="100"
GENERATE_TEST_USERS="10"

# Port configuration (different from production)
PORT=4001