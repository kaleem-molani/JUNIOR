# Development Environment Configuration
# Local development with hot reload and debugging

# Database - Local development database
DATABASE_URL="postgresql://postgres:root@localhost:5432/trading_app_dev?schema=public&connection_limit=5&pool_timeout=10&connection_timeout=5&connect_timeout=5"

# NextAuth (for development)
NEXTAUTH_SECRET="dev-secret-key-for-development-12345"
NEXTAUTH_URL="http://localhost:4002"

# Application Mode
NODE_ENV="development"
APP_ENV="development"

# Development-specific settings
SANDBOX_MODE="false"
MOCK_BROKER_API="false"
SKIP_REAL_TRADING="false"

# Performance Monitoring
ENABLE_PERFORMANCE_LOGGING="true"
LOG_LEVEL="debug"

# Test Data Settings
GENERATE_TEST_ACCOUNTS="10"
GENERATE_TEST_USERS="5"

# Port configuration for development
PORT=4002