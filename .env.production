# Production Environment Configuration
# Optimized for production deployment

# Database - Production database
DATABASE_URL="postgresql://postgres:root@localhost:5432/trading_app_prod?schema=public&connection_limit=20&pool_timeout=30&connection_timeout=15&connect_timeout=10"

# NextAuth (for production)
NEXTAUTH_SECRET="prod-secret-key-change-in-production-12345"
NEXTAUTH_URL="https://yourdomain.com"

# Application Mode
NODE_ENV="production"
APP_ENV="production"

# Production-specific settings
SANDBOX_MODE="false"
MOCK_BROKER_API="false"
SKIP_REAL_TRADING="false"

# Performance Monitoring
ENABLE_PERFORMANCE_LOGGING="false"
LOG_LEVEL="warn"

# Test Data Settings (disabled in production)
GENERATE_TEST_ACCOUNTS="0"
GENERATE_TEST_USERS="0"

# Port configuration for production
PORT=4000