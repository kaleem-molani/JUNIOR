{
  "name": "trading-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "cross-env PORT=4000 next dev",
    "build": "next build",
    "start": "cross-env PORT=4000 next start",
    "pm2:start": "mkdir -p logs && pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop trading-app && pm2 delete trading-app",
    "pm2:restart": "pm2 restart trading-app",
    "pm2:logs": "pm2 logs trading-app",
    "pm2:status": "pm2 status",
    "deploy": "zrok share reserved \"oneclick\"",
    "deploy-full": "start cmd /k \"npm start\" && timeout /t 5 && npm run deploy",
    "deploy:manual": "./scripts/deploy.sh",
    "rollback": "./scripts/rollback.sh",
    "validate-env": "./scripts/validate-env.sh",
    "health": "curl -f http://localhost:4000/api/health",
    "refresh-tokens": "tsx scripts/refresh-tokens.ts",
    "scheduled-token-refresh": "tsx scripts/scheduled-token-refresh.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "npx tsx test/test-api-endpoints.ts",
    "test:ci": "npm run lint && npm run build && npm run test"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.0.0",
    "@types/bcryptjs": "^3.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node-cron": "^3.0.11",
    "axios": "^1.13.1",
    "bcryptjs": "^3.0.2",
    "jsonwebtoken": "^9.0.2",
    "next": "^15.0.0",
    "next-auth": "^4.24.13",
    "node-cron": "^4.2.1",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "autoprefixer": "^10.0.0",
    "cross-env": "^10.1.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "^15.0.0",
    "postcss": "^8.0.0",
    "prisma": "^5.0.0",
    "tailwindcss": "^3.0.0",
    "tsx": "^4.20.6",
    "typescript": "^5.0.0"
  }
}
